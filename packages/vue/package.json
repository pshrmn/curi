{
  "name": "@curi/vue",
  "version": "1.0.0-beta.5",
  "description": "Curi plugins and components for Vue.js",
  "main": "dist/curi-vue.common.js",
  "module": "dist/curi-vue.es.js",
  "files": [
    "dist",
    "LICENSE",
    "*.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "node ./scripts/build",
    "prepare": "npm run build",
    "prepublishOnly": "npm test",
    "prettier": "prettier --single-quote --write \"{src,tests}/**/*.js\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pshrmn/curi/tree/master/packages/vue"
  },
  "keywords": [
    "Curi",
    "Vue",
    "navigation",
    "router"
  ],
  "author": "Paul Sherman",
  "license": "MIT",
  "devDependencies": {
    "@curi/core": "^1.0.0-beta.6",
    "@hickory/in-memory": "^1.0.0-beta.1",
    "@types/jest": "^21.1.0",
    "@types/node": "^8.0.30",
    "jest": "^21.1.0",
    "prettier": "^1.7.0",
    "rimraf": "^2.6.1",
    "rollup": "^0.50.0",
    "ts-jest": "^21.0.1",
    "typescript": "^2.5.2",
    "vue": "^2.3.3"
  },
  "dependencies": {
    "@curi/core": "^1.0.0-beta.6",
    "@hickory/root": "^1.0.0-beta.3",
    "vue": "^2.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "**/tests/**/*.spec.ts"
    ],
    "transform": {
      "\\.ts$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "module": "es6"
      }
    }
  }
}
