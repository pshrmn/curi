  "dependencies": {
    "@curi/router": "file:../router",
    "@curi/types": "file:../types",
    "@hickory/in-memory": "^2.0.0-beta.8",
    "@types/express": "^4.16.0",
    "@types/fs-extra": "^5.0.4",
    "fs-extra": "^7.0.0"
  }
