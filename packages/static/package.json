{
  "name": "@curi/static",
  "version": "1.0.0-beta.3",
  "description": "Generate static HTML files from Curi routes",
  "main": "dist/curi-static.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types",
    "LICENSE",
    "*.md"
  ],
  "scripts": {
