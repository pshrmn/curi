{
  "name": "@curi/react",
  "version": "1.0.0-beta.6",
  "description": "React web components to use with Curi",
  "main": "dist/curi-react.common.js",
  "module": "dist/curi-react.es.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types",
    "LICENSE",
    "*.md"
  ],
  "scripts": {
    "prebuild": "rimraf dist & rimraf types",
    "build": "node ./scripts/build",
    "prepare": "npm run build",
    "prettier": "prettier --single-quote --write \"{src,tests}/**/*.js\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pshrmn/curi/tree/master/packages/react"
  },
  "keywords": [
    "React",
    "URL",
    "URI",
    "Curi",
    "routing",
    "navigation"
  ],
  "author": "Paul Sherman",
  "license": "MIT",
  "peerDependencies": {
    "react": "^15"
  },
  "dependencies": {
    "@curi/addon-active": "^1.0.0-beta.3",
    "@curi/core": "^1.0.0-beta.3",
    "@hickory/root": "^1.0.0-beta.3",
    "@types/invariant": "^2.2.29",
    "@types/prop-types": "^15.5.1",
    "@types/react": "^16.0.5",
    "hoist-non-react-statics": "^2.3.1",
    "invariant": "^2.2.2",
    "prop-types": "^15.5.8"
  },
  "devDependencies": {
    "@curi/addon-active": "^1.0.0-beta.3",
    "@curi/core": "^1.0.0-beta.5",
    "@hickory/in-memory": "^1.0.0-beta.1",
    "@types/jest": "^21.1.0",
    "@types/node": "^8.0.30",
    "enzyme": "^2.8.2",
    "jest": "^21.1.0",
    "prettier": "^1.5.2",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "rimraf": "^2.6.1",
    "rollup": "^0.50.0",
    "ts-jest": "^21.0.1",
    "typescript": "^2.5.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx"
    ],
    "testMatch": [
      "**/tests/**/*.spec.tsx"
    ],
    "transform": {
      "\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "globals": {
      "ts-jest": {
        "module": "es6"
      }
    }
  }
}
