{
  "name": "curi-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --concurrency=1 --ignore @curi-example/* --ignore @curi/docs-website",
    "bootstrap:all": "lerna bootstrap",
    "postbootstrap": "lerna run prepare",
    "build": "lerna run build --ignore @curi-example/* --ignore @curi/docs-website",
    "clean": "lerna clean",
    "postinstall": "npm run bootstrap",
    "precommit": "pretty-quick --staged",
    "versions": "lerna publish --skip-git --skip-npm",
    "test": "lerna run test",
    "coverage": "lerna run coverage"
  },
  "author": "Paul Sherman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pshrmn/curi/issues"
  },
  "homepage": "https://github.com/pshrmn/curi#readme",
  "engines": {
    "npm": "^5.0.0"
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.2.2",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-size-snapshot": "^0.6.1",
    "rollup-plugin-typescript2": "^0.17.0",
    "rollup-plugin-uglify": "^2.0.1",
    "typescript": "^3.0.3"
  }
}
