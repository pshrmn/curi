{
  "name": "curi-monorepo",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap --ci --concurrency=1 --scope=@curi/*",
    "bootstrap:all": "lerna bootstrap --ci",
    "postbootstrap": "lerna run prepare",
    "build": "lerna run build --scope=@curi/*",
    "clean": "lerna clean",
    "postinstall": "npm run bootstrap",
    "precommit": "pretty-quick --staged",
    "versions": "lerna version --no-git-tag-version --no-push",
    "postversions": "node ./website/scripts/updatePackageVersions",
    "test": "lerna run test",
    "coverage": "lerna run coverage"
  },
  "author": "Paul Sherman",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pshrmn/curi/issues"
  },
  "homepage": "https://github.com/pshrmn/curi#readme",
  "engines": {
    "npm": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^10.9.4",
    "husky": "^0.14.3",
    "lerna": "^3.8.5",
    "prettier": "^1.10.2",
    "pretty-quick": "^1.2.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.65.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-size-snapshot": "^0.6.1",
    "rollup-plugin-typescript2": "^0.17.2",
    "rollup-plugin-uglify": "^2.0.1",
    "typescript": "^3.0.3"
  }
}
