    "npm": "^5.0.0"
  },
  "devDependencies": {
    "gzip-size": "^3.0.0",
    "husky": "^0.14.3",
    "lerna": "^2.9.0",
    "prettier": "^1.10.2",
    "pretty-bytes": "^4.0.2",
    "pretty-quick": "^1.2.2",
    "rollup": "^0.54.0",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-replace": "^2.0.0",
